<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Task Manager{% endblock %}</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome (si tu préfères Lucide, dis-le-moi) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon">

    <style>
        body {
            background-color: #f8f9fa;
        }
        .card-title {
            font-size: 1.1rem;
        }
        .badge {
            font-size: 0.75rem;
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Navbar -->
    <div class="navbar-nav ms-auto">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user me-1"></i>{{ app.user.firstName }}
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="{{ path('task_my_tasks') }}"><i class="fas fa-tasks me-1"></i>Mes tâches</a></li>
                <li><a class="dropdown-item" href="{{ path('task_index') }}"><i class="fas fa-list me-1"></i>Toutes les tâches</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt me-1"></i>Déconnexion</a></li>
            </ul>
        </div>
    {% else %}
        <a class="nav-link" href="{{ path('app_login') }}">
            <i class="fas fa-sign-in-alt me-1"></i>Connexion
        </a>
        <a class="nav-link" href="{{ path('app_register') }}">
            <i class="fas fa-user-plus me-1"></i>Inscription
        </a>
    {% endif %}
</div>

    <!-- Flash Messages -->
    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <!-- Main Content -->
    <main class="container mb-5">
        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light text-center py-3">
        <small>&copy; {{ "now"|date("Y") }} Task Manager. Tous droits réservés.</small>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
